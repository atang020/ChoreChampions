<div class="card-container center-block">
  <div class="card" id="{{id}}">
    <div class="front">
      <div class="card-contents">
        <div class="card-header">
          <h3 class="card-name">{{name}}</h3>
          <h3 class="card-reward">{{reward}}</h3>
          <img src="http://cliparts.co/cliparts/pT5/oAj/pT5oAjbkc.png" class="gold-img">
          <div style="clear: both;"></div>
        </div>
        
        <img src="{{imageURL}}" width="320" height="320" class="card-img img-responsive">

        <div class="card-requirements">
          <p class="card-requirements-text">Flip For Details</p>
        </div>
      </div>
    </div>
    <div class="back">
      <div class="card-contents">
        {{!-- List the card description bullets here --}}
        <ul class="card-reqs">
          {{#each requirements}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
        <p class="text-center">
          <form action="/chores/submit" method="POST"> 
          {{!-- TODO: this is a TERRIBLE way to do this, but it's temporary --}}
            <input type="hidden" name="id" value="{{id}}"/>
            <input type="hidden" name="name" value="{{name}}"/> 
            <input type="hidden" name="verifyBonus" value="{{verifyBonus}}"/>   
            <input type="hidden" name="belongsTo" value="{{belongsTo}}"/>   
   
            <button type="submit" class="btn btn-success complete-chore-btn">Complete Chore!</button>              
          </form>
          {{#unless withinRerollPeriod }}
          <form action="/reroll" method="POST">
          <input type="hidden" name="id" value="{{id}}" />
          <button class="btn btn-success reroll-chore-btn" data-reroll="{{id}}">Re-Roll <span class="badge">{{ user.rerolls }}</span></button>
          </form>
          {{/unless}}
        </p>
      </div>
    </div>
  </div>
</div>