<!doctype html>

<html>
<head>
  <title>Chore Champs - Settings</title>
  {{> styles }}
</head>

<body>
  {{> navbar }}
  <div class="container" margin="auto">
    {{#if alert}}
        <div class="alert alert-success">
          {{ alert }}
        </div>
    {{/if}}
    <div class="row">
      <div class="col-xs-12">
        <h1>Settings</h1>      
      </div>
    </div>
    <form action="/settings" method="post">
      <div class="form-group">
        <label>Cards are dealt every: </label> 
        <select name="deal_day" _default="{{deal_day}}" class="form-control">
          <option value="Sunday">Sunday</option>
          <option value="Monday">Monday</option>
          <option value="Tuesday">Tuesday</option>
          <option value="Wednesday">Wednesday</option>
          <option value="Thursday">Thursday</option>
          <option value="Friday">Friday</option>
          <option value="Saturday">Saturday</option>
        </select>

        <br/>
        <label>at</label>
        <select name="deal_time" _default="{{deal_time}}" class="form-control">
          <option value="8am">8am</option>
          <option value="9am">9am</option>
          <option value="10am">10am</option>
          <option value="11am">11am</option>
          <option value="12pm">12pm</option>
        </select>
      </div>
      <div class="form-group">
        <label for="">House Code</label>
        <input type="text" class="form-control" name="code" value="{{ code }}" readonly/>
      </div>
      <div class="form-group">
        <label for="">House Name</label>
        <input type="text" class="form-control" name="name" value="{{ name }}" />
      </div>
      {{#if users }}
      <label for="">Roomates</label>
      <ul class="list-group">
      {{#each users }}
        <li class="list-group-item">{{ name }}</li>
      {{/each}}
      </ul>
      {{/if}}
      <div class="form-group">
        <button class="btn btn-success form-control saveChanges">Save Changes</button>        
      </div>
    </form>
  </div>
  {{> footer }}
  </div>

  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/pages/settings.js"></script>
</body>
</html>
